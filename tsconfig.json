{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["vite/client"],
    "paths": {
      "@/*" : ["*"]
    }
  },
  "include": ["src"]
}
